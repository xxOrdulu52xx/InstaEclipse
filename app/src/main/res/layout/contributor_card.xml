<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_marginBottom="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="16dp">


        <!-- Contributor Name -->
        <TextView
            android:id="@+id/contributor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contributor_name"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="monospace" />

        <!-- GitHub Button -->
        <ImageButton
            android:id="@+id/github_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="GitHub"
            android:src="@drawable/ic_github_logo"
	    android:scaleType="fitCenter"
            android:visibility="gone"
            android:layoutDirection="ltr"
	    app:tint="@color/white"
            tools:ignore="HardcodedText" />

        <!-- LinkedIn Button -->
        <ImageButton
            android:id="@+id/linkedin_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="LinkedIn"
            android:src="@drawable/ic_linkedin_logo"
	    android:scaleType="fitCenter"
            android:visibility="gone"
            android:layoutDirection="ltr"
	    app:tint="@color/white"
            tools:ignore="HardcodedText" />

        <!-- Telegram Button -->
        <ImageButton
            android:id="@+id/telegram_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Telegram"
            android:src="@drawable/ic_telegram_logo"
	    android:scaleType="fitCenter"
            android:visibility="gone"
            android:layoutDirection="ltr"
	    app:tint="@color/white"
            tools:ignore="HardcodedText" />
</LinearLayout>
</androidx.cardview.widget.CardView>